varnishtest "Test vsthrottle vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import vsthrottle from "${vmod_topbuild}/src/.libs/libvmod_vsthrottle.so";

	sub vcl_deliver {
		if (!vsthrottle.is_denied("foo", 1, 1s)) {
			set resp.http.f1 = "OK";
		}

		if (!vsthrottle.is_denied("foo", 1, 1s)) {
			set resp.http.f2 = "OK";
		}
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.f1 == "OK"
	expect resp.http.f2 == <undef>
}

client c1 -run
